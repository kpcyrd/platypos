<h3>Dependencies</h3>
<ul>
    {{#each pkg.depends}}
    <li>{{this}}</li>
    {{/each}}
    {{#each pkg.makedepends}}
    <li>{{this}} (make)</li>
    {{/each}}
</ul>
<h3>Build Inputs</h3>
<ul>
    {{#each sources}}
    <li><a href="https://whatsrc.org/artifact/{{this.chksum}}">{{this.source}}</a></li>
    {{/each}}
</ul>
